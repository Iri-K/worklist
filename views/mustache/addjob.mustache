<form method="post" id="addJob">
    <div class="row">
        <div class="col-sm-4">
            <p>{{^editing}}Job is for this project...{{/editing}}{{#editing}}Job <b>#{{getJob.getId}}</b>, for project:{{/editing}}</p>
            <select id="itemProjectCombo" name="itemProject" data-placeholder="Select project">
                {{#projects}}
                    <option value="{{id}}" {{#current}}selected="selected"{{/current}}>
                        {{name}}
                    </option>
                {{/projects}}
            </select>
        </div>
        {{#editing}}
            <div class="col-sm-5">
               {{#canSeeBudgetArea}}
                    <p>Budget:</p>
                    {{#isRunnerOfWorkitem}}
                        <select id="budget-source-combo" name="budget-source-combo" data-placeholder="Select a budget">
                            {{& getBudgetCombo}}
                        </select>
                    {{/isRunnerOfWorkitem}}
                    {{^isRunnerOfWorkitem}}
                        {{#worklist.budget_id}}<p>{{worklist.budget_reason}}</p>{{/worklist.budget_id}}{{^worklist.budget_id}}<p>Not assigned</p>{{/worklist.budget_id}}
                    {{/isRunnerOfWorkitem}}
                  {{/canSeeBudgetArea}}
            </div>
        {{/editing}}
    </div>
    <div class="row">
        <div class="col-sm-9">
            <input type="text" id="summary" {{#editing}} value="{{getJob.getSummary}}" {{/editing}} name="summary" class="form-control" placeholder="Title" />
        </div>
    </div>
    {{^editing}}
        {{#userIsInternal}}
        <section class="row">
            <div class="col-sm-3">
                <select name="assigned" data-placeholder="Select asignee">
                    <option value="0">No one assigned</option>
                    {{#internalUsers}}
                        <option value="{{getId}}">{{getNickname}}</option>
                    {{/internalUsers}}
                </select>
            </div>
        </section>
        {{/userIsInternal}}
    {{/editing}}
    <div class="row">
        <div class="col-md-9 col-sm-9">
            <label for="notes">Description</label>
            <textarea class="form-control autogrow mentions" name="notes" id="notes"
              placeholder="describe the work necessary to successfully complete this job">{{#editing}}{{getJob.getNotes}} {{/editing}}</textarea>
        </div>
        <div class="col-sm-3">
            <label>Labels</label>
            <ul id="labels">
                {{#skills}}
                    <li>
                        <input id="label{{id}}" type="checkbox" {{#checked}} checked {{/checked}}name="label[{{id}}]" value="{{skill}}" />
                        <label for="label{{id}}">{{skill}}</label>
                    </li>
                {{/skills}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <fieldset id="attachments">
              <label>Drag &amp; drop or <em>select files</em> files to attach.</label>
              <ul></ul>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
          {{#currentUser.is_runner}}
              <select id="itemStatusCombo" name="itemStatus">
                {{#status}}
                    <option value="{{name}}" {{#selected}}selected="selected"{{/selected}}>
                        {{name}}
                    </option>
                {{/status}}
              </select>
          {{/currentUser.is_runner}}
        </div>

        {{#userIsInternal}}
        <div class="col-sm-offset-0 col-sm-5">
            <input type="checkbox" name="is_internal" {{#editing}} {{#getJob.isInternal}}checked{{/getJob.isInternal}}{{/editing}} id="is_internal" />
            <label for="is_internal">Internal</label>
        {{/userIsInternal}}
        {{^userIsInternal}}
        <div class="col-sm-offset-3 col-sm-2">
        {{/userIsInternal}}
            <button class="btn btn-primary" type="submit" name="save_item">{{#editing}}Save changes{{/editing}} {{^editing}}Add Job{{/editing}}</button>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function() {
        AddJob.init({{#editing}}{{getJob.getId}}{{/editing}}{{^editing}}0{{/editing}}, {{#editing}}true{{/editing}}{{^editing}}false{{/editing}});
    })
</script>
