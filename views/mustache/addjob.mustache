<form method="post" id="addJob">
    <div class="row">
        <div class="col-sm-3">
            <select id="itemProjectCombo" name="itemProject" data-placeholder="Select project">
                <option value="select" {{#first_selected}}selected="selected"{{/first_selected}}>
                    Select project
                </option>
                {{#projects}}
                    <option value="{{id}}" {{#current}}selected="selected"{{/current}}>
                        {{name}}
                    </option>
                {{/projects}}
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <input type="text" id="summary" name="summary" class="form-control" placeholder="Title" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-9 col-sm-9">
            <label for="notes">Description</label>
            <textarea class="form-control autogrow" name="notes" id="notes"
              placeholder="describe the work necessary to successfully complete this job"></textarea>
        </div>
        <div class="col-sm-3">
            <label>Labels</label>
            <ul id="labels">
                {{#skills}}
                    <li>
                        <input id="label{{id}}" type="checkbox" name="label[{{id}}]" value="{{skill}}" />
                        <label for="label{{id}}">{{skill}}</label>
                    </li>
                {{/skills}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <section>
                <div id="addaccordion" class="clear"></div>
                <a class="uploadbutton" />Select files</a> to attach.
                <div id="attachments"></div>
                <input type="hidden" name="files" value="" />
                <div class="uploadnotice"></div>
                <script type="text/html" id="uploadDocument">
                    <div class="attachment">
                        <span><#= title #></span>
                        <span id="fileRemoveAttachment_<#= fileid #>" class="removeAttachment">
                            <i class="fa fa-times"></i>
                        </span>
                    </div>
                </script>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-7 col-sm-2">
            <button class="btn btn-primary" type="submit" name="save_item">Add job</button>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function() {
        AddJob.init();
    })
</script>