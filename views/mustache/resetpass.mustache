<h1>Reset Password</h1>
<p class="error">{{msg}}</p>

{{^msg}}
<form action="./resetpass" method="post" name="frmlogin" onSubmit="return validate();">
    <p><label>Email<br />
        <input type="text" name="username" size="30" value="{{un}}" readonly="">
    </label></p>
    <input type="hidden" name="token" value="{{token}}" />
    <div class="LVspace">
      <p><label>New Password<br />
    <input type="password" name="password" id="password" size="30">
    </label></p>
      </div>

      <div class="LVspace">
      <p><label>Confirm Password<br />
     <input type="password" name="confirmpassword" id="confirmpassword" size="30"></label></p>
     </div>
    <p><input type="submit" class="wide" value="Reset Password" alt="Reset Password" name="submit" /></p>
</form>
{{/msg}}