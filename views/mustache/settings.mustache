<form role="form" id="settings" method="post">
    <h2>Settings</h2>
    <div class="row">
        <section class="col-md-6">
            <label>Nickname</label>
            {{currentUser.nickname}}
            <label>Email</label>
            {{currentUser.username}}

            <label for="paypal_email">Paypal Email</label>
            <input type="text" id="paypal_email" name="paypal_email" class="form-control" value="{{userInfo.paypal_email}}" />
            <label>Email notifications</label>
            <ul>
                <li>
                    <input type="checkbox" name="bidding_email_notify" id="bidding_email_notify" 
                      value="1" {{#receivesBiddingJobsAlerts}}checked="checked"{{/receivesBiddingJobsAlerts}}>
                    <label for="bidding_email_notify">New Jobs set to bidding</label>
                </li>
                <li>
                    <input type="checkbox" name="review_email_notify" id="review_email_notify" 
                      value="1" {{#receivesReviewJobsAlerts}}checked="checked"{{/receivesReviewJobsAlerts}} />
                    <label for="review_email_notify">Any job set to review</label>
                </li>
                <li>
                    <input type="checkbox" name="self_email_notify" id="self_email_notify" 
                      value="1" {{#receivesSelfActionsAlerts}}checked="checked"{{/receivesSelfActionsAlerts}} />
                    <label for="self_email_notify">Receive email notifications from my actions</label>
                </li>
            </ul>

            <label for="country">What country are you in?</label>
            {{& countrySelectBox}}

            <label for="timezone">What timezone are you in?</label>
            {{& timezoneSelectBox}}

            <label for="about">Short description of you and your skills</label>
            <textarea id="about" name="about" class="form-control autogrow">{{userInfo.about}}</textarea>

            <label for="contactway">Skype name</label>
            <input type="text" id="contactway" name="contactway" class="form-control" value="{{userInfo.contactway}}" />

        </section>
        <section class="col-md-6" style="float: right;">
            <label for="profilepicture">Photo</label>
            <p>
                <!-- <img id="profilepicture_github" src="{{userInfo.picture}}?320" /> -->
                <img src="https://avatars2.githubusercontent.com/u/7757504?320" />
            </p>
        </section>

    </div>
    <div class="row">
        <section class="col-md-6">
            <h3>For United States citizens</h3>
            <p>
                All US Citizens must submit a W-9 to be paid by Worklist.
                <a href="http://www.irs.gov/pub/irs-pdf/fw9.pdf" target="_blank">
                    Download W-9 Here
                </a>.
                Remember, you need a valid US mailing address to receive your 1099 
                tax documents at the end of the year. If you move, itâ€™s up to you 
                to let us know your new address.
            </p>
            <p>
                <input type="checkbox" name="w9_accepted" id="w9_accepted" 
                  {{#user.getW9_accepted}}checked="checked" disabled="disabled"{{/user.getW9_accepted}} />
                <label id="w9_accepted_label" for="w9_accepted">Check this box to let us know you'll do your part!</label>
            </p>
        </section>
        <section class="col-md-6">
            <h3>W-9</h3>
            <p>All US Citizens must submit a signed W-9 before we'll pay you.</p>
            <input class="upload-btn wl-icon-attach" id="uploadw9" type="button" value="Upload W9" />
        </section>
    </div>
    <div class="row">
        <p><input type="submit" id="save" value="Save changes" name="save" /></p>
    </div>
</form>

