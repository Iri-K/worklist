    <table>
        <tr>
            <th>Description</th>
            <th>Skills</th>
            <th>Project</th>
        </tr>
        {{#biddingJobs}}
        <tr>
            <td><a href="./{{id}}">{{summary}}</a></td>
            <td>{{skills}}</td>
            <td><a href="./{{project}}">{{project}}</a></td>
        </tr>
        {{/biddingJobs}}
